{
  "name": "universal-react-redux-boilerplate",
  "version": "2.0.0",
  "description": "Step by step creation of a Universal React + Redux Boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "node ./bin/server",
    "start": "cross-env NODE_ENV=production node ./bin/server",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cross-env NODE_ENV=production babel src --out-dir lib --copy-files",
    "build:client": "cross-env NODE_ENV=production webpack --progress",
    "clean": "rimraf dist lib",
    "check": "npm run lint && npm run test && npm run flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --cache .",
    "lint:css": "stylelint src/**/*.scss --syntax scss",
    "test": "cross-env NODE_ENV=test mocha mocha.config.js",
    "flow": "flow",
    "flow:stop": "flow stop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CrocoDillon/universal-react-redux-boilerplate.git"
  },
  "keywords": [
    "isomorphic",
    "universal",
    "react",
    "redux",
    "boilerplate"
  ],
  "author": "Dillon de Voor (http://crocodillon.com)",
  "license": "CC0-1.0",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0-alpha.7",
    "koa-static": "^3.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.2.2",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "webpack-isomorphic-tools": "^2.6.4"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.1",
    "css-modules-require-hook": "^4.0.5",
    "enzyme": "^2.6.0",
    "eslint": "^3.11.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "eslint-plugin-react": "^6.7.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "flow-bin": "^0.36.0",
    "glob": "^7.1.1",
    "jsdom": "^9.8.3",
    "mocha": "^3.2.0",
    "node-sass": "^3.13.0",
    "postcss-loader": "^1.2.0",
    "react-addons-test-utils": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "sinon": "^2.0.0-pre.4",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "webpack": "^2.1.0-beta.27",
    "webpack-dev-middleware": "1.7.0",
    "webpack-hot-middleware": "^2.13.2"
  }
}
