{
  "name": "universal-react-redux-boilerplate",
  "version": "2.0.0",
  "description": "Step by step creation of a Universal React + Redux Boilerplate",
  "main": "index.js",
  "scripts": {
    "dev": "node --trace-warnings ./bin/server",
    "dev-debug": "node --inspect --debug-brk --trace-warnings ./bin/server",
    "start": "cross-env NODE_ENV=production node ./bin/server",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cross-env NODE_ENV=production babel src --out-dir lib --copy-files",
    "build:client": "cross-env NODE_ENV=production webpack --progress",
    "clean": "rimraf dist lib",
    "check": "npm run lint && npm run test && npm run flow",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --cache .",
    "lint:css": "stylelint src/**/*.scss --syntax scss",
    "test": "cross-env NODE_ENV=test mocha mocha.config.js",
    "flow": "flow",
    "flow:stop": "flow stop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CrocoDillon/universal-react-redux-boilerplate.git"
  },
  "keywords": [
    "isomorphic",
    "universal",
    "react",
    "redux",
    "boilerplate"
  ],
  "author": "Dillon de Voor (http://crocodillon.com)",
  "license": "CC0-1.0",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.2.0",
    "koa-static": "^3.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "react-redux": "^5.0.4",
    "react-router-config": "^1.0.0-beta.3",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "webpack-isomorphic-tools": "^3.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.0.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-node5": "^1.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.1",
    "css-modules-require-hook": "^4.0.6",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-react": "^7.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.45.0",
    "glob": "^7.1.1",
    "jsdom": "^10.1.0",
    "mocha": "^3.4.1",
    "node-sass": "^4.5.2",
    "postcss-loader": "^2.0.5",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "webpack": "^2.5.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  }
}
